@model FoodMartMongoDb.Dtos.ProductDtos.GetProductByIdDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <h3 class="alert alert-primary">New Product Page|!</h3>
    <form method="post">

        <input type="hidden" asp-for="ProductId" class="form-control" />
        <label>Product Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Product Price</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Product Stock Count</label>
        <input type="text" asp-for="StockCount" class="form-control" />
        <br />

        <label>Product Image</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />

        <label>Category!</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">

            <option value="">Select Category</option>

        </select>
        <br />
        <button class="btn btn-success">Update</button>
    </form>
</div>